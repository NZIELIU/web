const metrics = [
  { value: '+1,134', label: 'Estudiantes', },
  { value: '+87%', label: 'Ahorro de Tiempo' },
  { value: '+6', label: 'Especialidades' },
  { value: '+99.9%', label: 'Estudiantes Satisfechos' }
];
---

<div class="flex justify-center">
  <div class="text-center">
    <h2 class="text-black text-3xl lg:text-5xl font-bold mb-2">Contamos con +40 AÃ±os de Experiencia </h2>
    <p class="text-gray-500 text-xl mb-6">A snapshot of our most important numbers.</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {metrics.map((metric) => (
