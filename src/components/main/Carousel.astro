<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrusel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .carousel-item {
            display: none;
        }

        .carousel-item.active {
            display: block;
        }
    </style>
</head>

<body class="bg-gray-100">

    <div id="default-carousel" class="relative z-10 w-full -mt-5">
        <!-- Carousel wrapper -->
        <div class="relative h-[300px] md:h-[400px] overflow-hidden rounded-lg">
            <!-- Item 1 -->
            <div class="carousel-item active">
                <img src="/1.jpeg" class="object-cover absolute block w-full h-full top-0 left-1/2 transform -translate-x-1/2" alt="...">
            </div>
            <!-- Item 2 -->
            <div class="carousel-item">
                <img src="/3.jpeg" class="object-cover absolute block w-full h-full top-0 left-1/2 transform -translate-x-1/2" alt="...">
            </div>
            <!-- Item 3 -->
            <div class="carousel-item">
                <img src="/2.jpeg" class="object-cover absolute block w-full h-full top-0 left-1/2 transform -translate-x-1/2" alt="...">
            </div>
        </div>

        <!-- Slider indicators -->
        <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
            <button type="button" class="w-3 h-3 rounded-full bg-white/60 dark:bg-gray-800/60" aria-label="Slide 1" data-carousel-slide-to="0"></button>
            <button type="button" class="w-3 h-3 rounded-full bg-white/60 dark:bg-gray-800/60" aria-label="Slide 2" data-carousel-slide-to="1"></button>
            <button type="button" class="w-3 h-3 rounded-full bg-white/60 dark:bg-gray-800/60" aria-label="Slide 3" data-carousel-slide-to="2"></button>
        </div>

        <!-- Slider controls -->
        <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" id="carousel-prev">
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                </svg>
                <span class="sr-only">Anterior</span>
            </span>
        </button>

        <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" id="carousel-next">
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <span class="sr-only">Siguiente</span>
            </span>
        </button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Obtenemos los elementos del carrusel
            const carouselItems = document.querySelectorAll('.carousel-item');
            const prevButton = document.getElementById('carousel-prev');
            const nextButton = document.getElementById('carousel-next');
            const indicators = document.querySelectorAll('[data-carousel-slide-to]');

            let currentIndex = 0;

            // Función para mostrar el siguiente ítem
            function showNextItem() {
                carouselItems[currentIndex].classList.remove('active'); // Ocultar el ítem actual
                currentIndex = (currentIndex + 1) % carouselItems.length; // Cambiar al siguiente ítem
                carouselItems[currentIndex].classList.add('active'); // Mostrar el siguiente ítem
            }

            // Función para mostrar el ítem anterior
            function showPrevItem() {
                carouselItems[currentIndex].classList.remove('active'); // Ocultar el ítem actual
                currentIndex = (currentIndex - 1 + carouselItems.length) % carouselItems.length; // Cambiar al ítem anterior
                carouselItems[currentIndex].classList.add('active'); // Mostrar el ítem anterior
            }

            // Funciones para los botones de control
            prevButton.addEventListener('click', showPrevItem);
            nextButton.addEventListener('click', showNextItem);

            // Función para cambiar de ítem al hacer clic en el indicador
            indicators.forEach((indicator, index) => {
                indicator.addEventListener('click', () => {
                    carouselItems[currentIndex].classList.remove('active'); // Ocultar el ítem actual
                    currentIndex = index;
                    carouselItems[currentIndex].classList.add('active'); // Mostrar el nuevo ítem
                });
            });

            // Inicialización para que el primer ítem se muestre
            carouselItems[currentIndex].classList.add('active');
        });
    </script>

</body>

</html>
