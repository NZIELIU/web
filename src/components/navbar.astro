---
import Global from "./icons/Global.astro"
---

<nav id="navbar" class="bg-gray-100 mb-4 w-full z-40 fixed top-0 items-center dark:bg-transparent backdrop-blur-lg">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/" class="flex items-left space-x-3 rtl:space-x-reverse">
      <img src="/volta_logo.png" height="60" width="60" class="transition-all duration-300 transform hover:scale-105" alt="Logo">
      <span class="text-center self-center text-3xl font-semibold whitespace-nowrap">Alessandro Volta</span>
    </a>

    <button data-collapse-toggle="navbar-dropdown" type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-3xl text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-dropdown" aria-expanded="false">
      <span class="sr-only">Open main menu</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>

    <div class="hidden w-full md:block md:w-auto" id="navbar-dropdown">
      <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border text-[20px] font-bold md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0">
        <li>
          <a href="/" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
            Inicio
          </a>
        </li>

        <li>
          <a href="/about" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
            Sobre Nosotros
          </a>
        </li>

        <li>
          <a href="/indumentaria" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
            Indumentaria
          </a>
        </li>

        <li>
          <a href="/contacto" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
            Contacto
          </a>
        </li>

        </li>
      </ul>
    </div>
  </div>
</nav>


<style>
  @keyframes add-shadow {
  to {
    box-shadow: 0 5px 50px -5px hsla(0, 0%, 100%, 0.1),
                0 0 0 1px hsla(0, 0%, 100%, 0.1);
    background: rgba(0, 0, 0, 0.3);
  }
}

#navbar {
  backdrop-filter: blur(10px);
  animation: add-shadow linear both;
  position: sticky;
  top: 0;
  animation-timeline: scroll();
  animation-range: 0 150px;
}

#navbar .text-gray-900 {
    transition: color 0.3s ease;
  }

  #navbar a:hover {
    color: #2563eb;
  }

  #navbar .hover\:bg-gray-100:hover {
    background-color: rgba(255, 255, 255, 0.15);
  }

  #navbar .md\:hover\:bg-transparent:hover {
    background-color: transparent;
  }

</style>